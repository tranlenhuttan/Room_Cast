@model RoomCast.Models.Album
@{
    ViewData["Title"] = "Delete Album";
    var createdAt = Model.Timestamp.ToLocalTime().ToString("g");
}

<div class="max-w-xl space-y-6">
    <div>
        <h2 class="text-3xl font-semibold text-slate-900">Delete Album</h2>
        <p class="text-sm text-red-600">Are you sure you want to delete this album? This action cannot be undone.</p>
    </div>

    <div class="overflow-hidden rounded-lg border border-red-200 bg-red-50 p-6 shadow-sm">
        <dl class="space-y-3 text-sm">
            <div>
                <dt class="font-semibold text-slate-700">Album Name:</dt>
                <dd class="mt-1 text-slate-900">@Model.AlbumName</dd>
            </div>
            <div>
                <dt class="font-semibold text-slate-700">Created:</dt>
                <dd class="mt-1 text-slate-600">@createdAt</dd>
            </div>
            <div>
                <dt class="font-semibold text-slate-700">Files in Album:</dt>
                <dd class="mt-1 text-slate-600">@Model.AlbumFiles.Count file(s)</dd>
            </div>
        </dl>
    </div>

    @if (Model.AlbumFiles.Count > 0)
    {
        <div class="rounded-lg border border-amber-200 bg-amber-50 p-4">
            <div class="flex items-start gap-3">
                <svg class="h-5 w-5 flex-shrink-0 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <p class="text-sm text-amber-800">
                    <strong>Note:</strong> Deleting this album will only remove the album itself. The files will remain in your media library.
                </p>
            </div>
        </div>
    }

    <form asp-action="Delete" method="post" class="flex gap-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AlbumId" />
        <button type="submit"
                class="inline-flex items-center justify-center rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">
            Delete Album
        </button>
        <a asp-action="Index"
           class="inline-flex items-center justify-center rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm transition hover:bg-slate-50">
            Cancel
        </a>
    </form>
</div>
