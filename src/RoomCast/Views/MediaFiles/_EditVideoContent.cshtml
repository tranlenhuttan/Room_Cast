@model RoomCast.Models.ViewModels.MediaFileEditViewModel

<div class="card shadow-sm">
    <div class="card-header">
        <strong>Video Preview &amp; Trim</strong>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <video class="w-100 rounded" controls preload="metadata" poster="@Model.ThumbnailPath">
                <source src="@Model.FilePath" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
            @if (Model.DurationSeconds.HasValue)
            {
                <p class="small text-muted mb-0">
                    Current duration: @TimeSpan.FromSeconds(Model.DurationSeconds.Value).ToString("hh\\:mm\\:ss")
                </p>
            }
        </div>

        <div class="row g-3 mb-3">
            <div class="col-sm-6">
                <label asp-for="TrimStartSeconds" class="form-label"></label>
                <input asp-for="TrimStartSeconds" class="form-control" type="number" step="0.1" min="0" />
                <span asp-validation-for="TrimStartSeconds" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="TrimEndSeconds" class="form-label"></label>
                <input asp-for="TrimEndSeconds" class="form-control" type="number" step="0.1" min="0" />
                <span asp-validation-for="TrimEndSeconds" class="text-danger"></span>
            </div>
        </div>

        <div class="form-check mb-2">
            <input asp-for="OverwriteExistingVideo" class="form-check-input" type="checkbox" />
            <label asp-for="OverwriteExistingVideo" class="form-check-label">
                Overwrite the original video file
            </label>
        </div>
        <span asp-validation-for="OverwriteExistingVideo" class="text-danger"></span>

        <p class="form-text">
            Set start and end points (in seconds) to trim the video. Leave blank to keep the original duration.
            Thumbnails are regenerated automatically after saving.
        </p>
    </div>
</div>
