@using Microsoft.AspNetCore.Identity
@using RoomCast.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoomCast</title>

    <link rel="stylesheet" href="~/css/tailwind.generated.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/media-preview.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/viewerjs@1.11.6/dist/viewer.min.css" />
    <link rel="stylesheet" href="~/css/viewer-overrides.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
@{
    var isFullWidthLayout = ViewData["IsFullWidthLayout"] is true;
    var hideLayoutFooter = ViewData["HideLayoutFooter"] is true;
    var containerClass = isFullWidthLayout
        ? "flex w-full flex-1 flex-col"
        : "mx-auto flex w-full max-w-7xl flex-1 flex-col px-4 py-6 sm:px-6 lg:px-8";
    var mainContentClass = ViewData["MainContentClass"] as string ?? (isFullWidthLayout ? "flex flex-1 flex-col" : string.Empty);
}
<body class="bg-slate-100 text-slate-800 min-h-screen flex flex-col">
    <header class="bg-slate-900 text-white shadow-sm">
        <nav class="mx-auto flex w-full max-w-7xl items-center justify-between gap-4 px-4 py-3 sm:px-6 lg:px-8">
@{
    var brandHref = SignInManager.IsSignedIn(User)
        ? Url.Action("Index", "MediaFiles")
        : Url.Action("Login", "Account");
}
            <a class="text-xl font-semibold text-white" href="@brandHref">RoomCast</a>
            <div class="hidden flex-1 items-center justify-end gap-8 md:flex">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="flex items-center gap-6">
                        <a class="text-sm font-medium text-slate-200 transition hover:text-white" asp-controller="MediaFiles" asp-action="Index">My Files</a>
                        <a class="text-sm font-medium text-slate-200 transition hover:text-white" asp-controller="MediaFiles" asp-action="Upload">Upload</a>
                        <a class="text-sm font-medium text-slate-200 transition hover:text-white" asp-controller="Albums" asp-action="Index">Albums</a>
                    </div>
                }
                <div class="flex items-center gap-4">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <span class="text-sm text-slate-300">Hello @User.Identity?.Name!</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="rounded-full border border-white/30 px-4 py-1 text-sm font-medium text-white transition hover:border-white hover:bg-white/10">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="rounded-full bg-white px-4 py-1 text-sm font-semibold text-slate-900 transition hover:bg-slate-100" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </div>
            </div>
            <button id="mobileNavToggle"
                    type="button"
                    class="inline-flex items-center rounded-md border border-white/30 px-3 py-2 text-sm font-semibold text-white transition hover:border-white hover:bg-white/10 md:hidden"
                    aria-controls="mobileNavPanel"
                    aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </nav>
        <div id="mobileNavPanel" class="hidden border-t border-white/10 bg-slate-900/95 px-4 py-4 sm:px-6 md:hidden">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="flex flex-col gap-4">
                    <a class="text-sm font-medium text-slate-100 transition hover:text-white" asp-controller="MediaFiles" asp-action="Index">My Files</a>
                    <a class="text-sm font-medium text-slate-100 transition hover:text-white" asp-controller="MediaFiles" asp-action="Upload">Upload</a>
                    <a class="text-sm font-medium text-slate-100 transition hover:text-white" asp-controller="Albums" asp-action="Index">Albums</a>
                    <span class="text-sm text-slate-300">Hello @User.Identity?.Name!</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="pt-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full rounded-md bg-white px-4 py-2 text-sm font-semibold text-slate-900 transition hover:bg-slate-100">
                            Logout
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="flex flex-col gap-3">
                    <a class="rounded-md bg-white px-4 py-2 text-center text-sm font-semibold text-slate-900 transition hover:bg-slate-100" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="rounded-md border border-white/40 px-4 py-2 text-center text-sm font-semibold text-white transition hover:border-white hover:bg-white/10" asp-controller="Account" asp-action="SignUp">Sign Up</a>
                </div>
            }
        </div>
    </header>

    <div class="@containerClass">
        <main role="main" class="@(string.IsNullOrWhiteSpace(mainContentClass) ? null : mainContentClass)">
            @RenderBody()
        </main>
    </div>

    @if (!hideLayoutFooter)
    {
        <footer class="mt-auto bg-slate-900 py-4 text-sm text-slate-300">
            <div class="mx-auto flex w-full max-w-7xl flex-col items-center justify-between gap-2 px-4 text-center sm:flex-row sm:px-6 lg:px-8">
                <span>&copy; 2025 - RoomCast</span>
                <a class="text-slate-200 underline-offset-4 transition hover:text-white hover:underline" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/viewerjs@1.11.6/dist/viewer.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        (() => {
            const toggle = document.getElementById('mobileNavToggle');
            const panel = document.getElementById('mobileNavPanel');
            if (!toggle || !panel) {
                return;
            }

            toggle.addEventListener('click', () => {
                const expanded = toggle.getAttribute('aria-expanded') === 'true';
                toggle.setAttribute('aria-expanded', (!expanded).toString());
                panel.classList.toggle('hidden', expanded);
            });
        })();
    </script>
</body>
</html>
